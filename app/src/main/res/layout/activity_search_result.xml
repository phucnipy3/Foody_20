<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f00"
        android:padding="8dp"
        >
        <TextView
            android:id="@+id/txtBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icn_back"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#fff"
            />
        <EditText
            android:id="@+id/edtSearchResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bgr"
            android:drawableLeft="@drawable/icn_search"
            android:padding="5dp"
            android:hint=""
            android:drawableRight="@drawable/btn_bgr"
            android:layout_toRightOf="@+id/txtBack"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa điểm ở: "
            android:paddingVertical="7dp"
            android:layout_toLeftOf="@+id/tvProvinces"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvProvinces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hồ Chí Minh"
            android:padding="7dp"
            android:textColor="#333"
            android:layout_alignRight="@+id/edtSearchResult"
            android:textStyle="bold"
            />
    </RelativeLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/btnBestMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="0.3"
                android:background="#edf"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:text="Đúng nhất"
                android:textColor="#000"
                android:textSize="17dp" />
            <TextView
                android:textColor="#000"
                android:textSize="17dp"
                android:gravity="center"
                android:background="#edf"
                android:paddingVertical="10dp"
                android:layout_marginRight="1dp"
                android:id="@+id/btnNearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Gần nhất"
                />
            <TextView
                android:textColor="#000"
                android:textSize="17dp"
                android:gravity="center"
                android:background="#edf"
                android:paddingVertical="10dp"
                android:layout_marginRight="1dp"
                android:id="@+id/btnPopular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Phổ biến"
                />
            <TextView
                android:textColor="#000"
                android:textSize="17dp"
                android:gravity="center"
                android:background="#edf"
                android:paddingVertical="10dp"
                android:id="@+id/btnFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="Lọc"
                android:drawableRight="@drawable/icn_filter"
                android:paddingRight="5dp"
                />

        </TableRow>
        <ProgressBar
            android:id="@+id/progress_bar_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    <ListView
        android:id="@+id/lstResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>