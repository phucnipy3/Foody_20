<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f00"
        android:padding="8dp"
        >
        <TextView
            android:id="@+id/txtBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icn_back"
            android:layout_marginRight="20dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="#fff"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bgr"
            android:layout_toRightOf="@+id/txtBack"
            >
        <EditText
            android:id="@+id/edtSearchResult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:inputType="text"
            android:scrollHorizontally="true"
            android:background="@drawable/edittext_bgr"
            android:drawableLeft="@drawable/icn_search"
            android:padding="5dp"
            android:hint="Tìm kiếm"
            android:drawableRight="@drawable/btn_bgr"
            android:imeOptions="actionSearch"
            />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa điểm ở: "
            android:paddingVertical="7dp"
            android:layout_toRightOf="@+id/edtSearchResult"
            android:textStyle="bold"
            android:layout_weight="0"
            />
        <TextView
            android:id="@+id/tvChooseProvince"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:padding="7dp"
            android:textColor="#333"
            android:layout_toRightOf="@+id/tv1"
            android:textStyle="bold"
            android:layout_weight="0"
            />
        </LinearLayout>
    </RelativeLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:id="@+id/lnlBestMatch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="0.3"
                android:background="#eeddff"
                android:paddingBottom="2dp"
                >
            <TextView
                android:id="@+id/btnBestMatch"
                android:text="Đúng nhất"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeddff"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:textColor="#000"
                android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnlNearby"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="0.3"
                android:background="#eeddff"
                android:paddingBottom="2dp"
                >
            <TextView
                android:id="@+id/btnNearby"
                android:text="Gần nhất"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeddff"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:textColor="#000"
                android:textStyle="bold"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnlPopular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="0.3"
                android:background="#eeddff"
                android:paddingBottom="2dp"
                >
            <TextView
                android:id="@+id/btnPopular"
                android:text="Phổ biến"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeddff"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:textColor="#000"
                android:textStyle="bold"
                />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnlFilter"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="0.1"
                android:background="#eeddff"
                android:paddingBottom="2dp"
                >
            <TextView
                android:id="@+id/btnFilter"
                android:text="Lọc"
                android:drawableRight="@drawable/icn_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#eeddff"
                android:gravity="center"
                android:paddingVertical="10dp"
                android:textColor="#000"
                android:textStyle="bold"
                />
            </LinearLayout>
        </TableRow>
        <ProgressBar
            android:id="@+id/progress_bar_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/pgb_1"
            android:indeterminateDuration="@android:integer/config_longAnimTime"
            />
    <ListView
        android:id="@+id/lstResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>