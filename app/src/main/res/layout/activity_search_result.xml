<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResultActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f00"
        android:padding="8dp"
        >
        <TextView
            android:id="@+id/txtBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="<"
            android:paddingRight="20dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#fff"
            />
        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bgr"
            android:drawableLeft="@drawable/icn_search"
            android:padding="5dp"
            android:hint=""
            android:drawableRight="@drawable/btn_bgr"
            android:layout_toRightOf="@+id/txtBack"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa điểm ở: "
            android:paddingVertical="7dp"
            android:layout_toLeftOf="@+id/txtProvinces"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/txtProvinces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TP HCM"
            android:padding="7dp"
            android:layout_alignRight="@+id/edtSearch"
            android:textStyle="bold"
            />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Đúng nhất"
                />
            <Button
                android:id="@+id/btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btn1"
                android:text="Gần nhất"
                />
            <Button
                android:id="@+id/btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btn2"
                android:text="Phổ biến"
                />
            <Button
                android:id="@+id/btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/btn3"
                android:layout_alignParentRight="true"
                android:text="Lọc"
                android:drawableRight="@drawable/icn_search"
                />
        </RelativeLayout>
    <ListView
        android:id="@+id/lstResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>